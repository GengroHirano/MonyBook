<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hse="http://schemas.android.com/apk/res/com.hse.moneybook"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="8" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="2dp"
        android:layout_row="0"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <com.hse.ui.CustomTextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="ひにち"
            hse:customFont="aquafont.ttf" />

        <com.hse.ui.CustomTextView
            android:id="@+id/editDate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/date"
            android:layout_alignLeft="@+id/buyName"
            android:layout_toRightOf="@id/date"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:textSize="24sp"
            hse:customFont="aquafont.ttf" />

        <com.hse.ui.CustomTextView
            android:id="@+id/editDay"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/date"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/editDate"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:textSize="24sp"
            hse:customFont="aquafont.ttf" />

        <com.hse.ui.CustomTextView
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/date"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="かったもの"
            hse:customFont="aquafont.ttf" />

        <EditText
            android:id="@+id/buyName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/buy"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/buy"
            android:focusable="true"
            android:lines="1"
            android:textSize="28sp" />

        <com.hse.ui.CustomTextView
            android:id="@+id/reasion"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/buy"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="ひとこと"
            hse:customFont="aquafont.ttf" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/reasion"
            android:layout_alignLeft="@id/buyName"
            android:layout_toRightOf="@id/reasion"
            android:focusable="true"
            android:lines="1"
            android:textSize="28sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:orientation="horizontal" >

        <com.hse.ui.CustomTextView
            android:id="@+id/dispNum"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:gravity="right|center"
            android:lines="1"
            android:text="0"
            android:textSize="48sp"
            hse:customFont="aquafont.ttf" />

        <com.hse.ui.CustomTextView
            android:id="@+id/dispNum"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:text="えん"
            android:textSize="30sp"
            hse:customFont="aquafont.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="1"
            android:text="1"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="2"
            android:text="2"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="3"
            android:text="3"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="4"
            android:text="4"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="5"
            android:text="5"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="6"
            android:text="6"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="7"
            android:text="7"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="8"
            android:text="8"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="9"
            android:text="9"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <Button
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="11"
            android:text="くりあ"
            android:textScaleX="0.75"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="0"
            android:text="0"
            android:textSize="32sp" />
        
        <Space 
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:textSize="32sp"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="7"
        android:orientation="horizontal"
        android:paddingLeft="72dp"
        android:paddingRight="72dp" >

        <Button
            android:id="@+id/resist_button"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:tag="10"
            android:text="とーろく"
            android:textSize="20sp" />
    </LinearLayout>

</GridLayout>